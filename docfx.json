{
  "metadata": [
    {
      "src": [
        {
          "files": [ "src/**/*.csproj" ],
          "exclude": [ "src/MSI/**", "src/VSIX/**", "**/bin/**", "**/obj/**" ],
          "cwd": "Npgsql/"
        }
      ],
      "dest": "obj/api/Npgsql",
      "properties": {
        "TargetFramework": "net45"
      }
    },
    {
      "src": [
        {
          "files": [ "src/**/*.csproj" ],
          "exclude": [ "**/bin/**", "**/obj/**", "Properties/NpgsqlStrings.*" ],
          "cwd": "Npgsql.EntityFrameworkCore.PostgreSQL"
        }
      ],
      "dest": "obj/api/EFCore.PG",
      "properties": {
        "TargetFramework": "netstandard2.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.yml" ],
        "cwd": "obj/api/Npgsql",
        "dest": "doc/api"
      },
      {
        "files": [ "**/*.yml" ],
        "cwd": "obj/api/EFCore.PG",
        "dest": "efcore/api"
      },
      {
        "files": [ "**.md" ],
        "cwd": "Npgsql/doc",
        "dest": "doc"
      },
      {
        "files": [ "**.md" ],
        "cwd": "Npgsql.EntityFrameworkCore.PostgreSQL/doc",
        "dest": "efcore"
      },
      {
        "files": [ "**.md" ],
        "cwd": "EntityFramework6.Npgsql/doc",
        "dest": "ef6"
      },
      {
        "files": [ "*.md", "dev/**.md", "toc.yml" ]
      }
    ],
    "resource": [
      {
        "files": [ "img/**", "CNAME" ]
      }
    ],
    "globalMetadata": {
      "_appTitle": "Npgsql Documentation",
      "_appFooter": "© Copyright 2018 The Npgsql Development Team",
      "_appLogoPath": "img/logo.svg",
      "_enableSearch": true
    },
    "fileMetadata": {
      "_gitContribute" : {
        "Npgsql/**.md": {
          "repo": "https://github.com/npgsql/Npgsql",
          "branch": "master"
        },
        "Npgsql.EntityFrameworkCore.PostgreSQL/**.md": {
          "repo": "https://github.com/npgsql/Npgsql.EntityFrameworkCore.PostgreSQL"
	},
        "EntityFramework6.Npgsql/**.md": {
          "repo": "https://github.com/npgsql/EntityFramework6.Npgsql"
	},
        "obj/api/**.yml": {
          "repo": "https://github.com/npgsql/Npgsql"
	}
      }
    },
    "dest" : "docs"
  }
}
